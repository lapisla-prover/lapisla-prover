generator client {
  provider = "prisma-client-js"
//  output = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id           String   @id @default(uuid())
  name         String   @unique
}

model files {
  id           String   @id @default(uuid()) // permalink_id 
  ownerId      String
  name         String
  createdAt    DateTime @default(now())
  @@unique([ownerId, name])
  @@index([ownerId])
}

model snapshots {
  id           String   @id @default(uuid())
  fileId       String
  version      Int
  isPublic     Boolean
  createdAt    DateTime @default(now())
  content      String  @db.Text
  @@unique([fileId, version])
  @@index([fileId])
}

model dependencies {
  id           String   @id @default(uuid())
  dependerId   String
  dependeeId   String
  @@index([dependerId])
}
