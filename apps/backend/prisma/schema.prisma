generator client {
  provider = "prisma-client-js"
  //  output = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id    String  @id @default(uuid())
  name  String  @unique
  files files[]
}

model files {
  id        String      @id @default(uuid()) // permalink_id 
  ownerId   String
  name      String
  createdAt DateTime    @default(now())
  owner     users       @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  snapshots snapshots[]

  @@unique([ownerId, name])
  @@index([ownerId])
}

model snapshots {
  id        String   @id @default(uuid())
  fileId    String
  version   Int
  isPublic  Boolean
  createdAt DateTime @default(now())
  content   String   @db.Text
  file      files    @relation(fields: [fileId], references: [id], onDelete: Cascade)
  dependees dependencies[]

  @@unique([fileId, version])
  @@index([fileId])
}

model dependencies {
  id         String @id @default(uuid())
  dependerId String
  dependeeId String
  depender   snapshots @relation(fields: [dependerId], references: [id], onDelete: Cascade)

  @@index([dependerId])
}

model sessions {
  sessionId    String   @id @default(uuid())
  value        String

  @@unique([sessionId])
}