generator client {
  provider = "prisma-client-js"
//  output = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id           String   @id @default(uuid())
  name         String   @unique
}

model files {
  id           String   @id @default(uuid()) // permalink_id 
  owner_id     String
  name         String
  created_at   DateTime @default(now())
  @@unique([owner_id, name])
  @@index([owner_id])
}

model snapshots {
  id           String   @id @default(uuid())
  file_id      String
  version      Int
  is_public    Boolean
  created_at   DateTime @default(now())
  content      String  @db.Text
  @@unique([file_id, version])
  @@index([file_id])
}

model dependencies {
  id           String   @id @default(uuid())
  depender_id  String
  dependee_id  String
  @@index([depender_id])
}
